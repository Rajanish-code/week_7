															"enablePartitionDiscovery": false
														},
														"formatSettings": {
															"type": "DelimitedTextReadSettings"
														}
													},
													"sink": {
														"type": "AzureSqlSink",
														"writeBehavior": {
															"value": "TRUNCATE master_child",
															"type": "Expression"
														},
														"sqlWriterUseTableLock": false,
														"upsertSettings": {
